    android:layout_height="match_parent"
    android:orientation="horizontal" >
    
    <View
   	    android:layout_width="1dp"
   	    android:layout_height="match_parent"
   	    android:background="@color/taxi_request_detail_item_divide" />

	
   
      	
	<TextView android:layout_height="wrap_content" android:layout_width="80dp" 
    android:textSize="30sp" 
    android:layout_marginRight="5dp" android:layout_marginLeft="5dp" android:id="@+id/index"/>
	
	
	
	<View
   	    android:layout_width="1dp"
   	    android:layout_height="match_parent"
   	    android:background="@color/taxi_request_detail_item_divide" />
   
      	
    <TextView android:layout_height="wrap_content" android:layout_width="160dp" 
    android:textSize="15sp" 
    android:layout_marginRight="5dp" android:layout_marginLeft="5dp"  android:id="@+id/date"/>
      	
    <View
   	    android:layout_width="1dp"
   	    android:layout_height="match_parent"
   	    android:background="@color/taxi_request_detail_item_divide" />
 
   <TextView android:layout_height="wrap_content" android:layout_width="80dp" 
    android:textSize="15sp" 
    android:layout_marginRight="5dp" android:layout_marginLeft="5dp"  android:id="@+id/state"/>
   
 	 </LinearLayout>
